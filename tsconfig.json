{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "resolveJsonModule": true,
    "paths": {
      "~/e2e/*": ["e2e/*"],
      "~/test/*": ["test/*"],
      "~/storybook/*": ["storybook/*"],
      "~/*": ["app/*"]
    },
    "rootDir": "./",
    "skipLibCheck": true,
    "typeRoots": ["./app/types", "./node_modules/@types"],
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "app", "test", "storybook"]
}
